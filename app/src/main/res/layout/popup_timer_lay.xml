                        android:gravity="center"
                        android:textSize="@dimen/subtxt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

