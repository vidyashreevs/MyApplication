<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                style="@style/NormalFonts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/addhome_text"
                android:text="Wireless Panel Switches" />

            <ListView
                android:id="@+id/Panel_Switches_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="6"
                android:choiceMode="singleChoice"
                android:dividerHeight="2dp"
                android:fadeScrollbars="false"
                android:fadingEdgeLength="10dp"
                android:listSelector="@android:color/transparent"></ListView>
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/cancelPanelSettings"
            style="@style/ButtonFonts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/Congif_heading"
            android:layout_weight="1"
            android:textSize="@dimen/Config_buton_text"
            android:background="@drawable/display_button"
            android:text="Cancel" />

        <Button
            android:id="@+id/DeletePanelSettings"
            style="@style/ButtonFonts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/Congif_heading"
            android:layout_weight="1"
            android:textSize="@dimen/Config_buton_text"
            android:background="@drawable/display_button"
            android:text="Delete" />

        <Button
            android:id="@+id/savePanelSettings"
            style="@style/ButtonFonts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/Congif_heading"
            android:layout_weight="1"
            android:textSize="@dimen/Config_buton_text"
            android:background="@drawable/display_button"
            android:text="Save" />
    </LinearLayout>

</LinearLayout>