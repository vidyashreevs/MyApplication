<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:layout_weight="1"
    >
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    <TextView
        android:id="@+id/tv_deleteuser_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:text="hi"
        android:textSize="@dimen/dev_config_layout_heading">

    </TextView>
</LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="@dimen/height_delete_userpopup"
            android:layout_height="@dimen/height_delete_userpopup"
            android:layout_weight="1"
            android:padding="5dp">
            <ImageView
                android:id="@+id/img_delete_userpopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@drawable/blue_button">

            </ImageView>
        </LinearLayout>







</LinearLayout>
</LinearLayout>